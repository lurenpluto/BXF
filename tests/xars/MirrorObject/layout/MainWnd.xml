<!--XML最好存储为UTF-8编码-->
<xlue>

<control class="MirrorGif">
	<attr_def>
		<attr name="Type" type="string"/>
	</attr_def>
	<objtemplate>
		<children>
			<obj class="LayerObject">
				<attr>
					<left>100</left>
					<top>100</top>
					<width>240</width>
					<height>170</height>
					<clipsens>1</clipsens>
				</attr>
				<children>
					<obj class="SeqImageObject">
						<attr>
							<width>father.width</width>
							<height>father.height</height>
							<gif>cat</gif>
							<loop>1</loop>
						</attr>
						<eventlist>
							<event name="OnInitControl">
								local arg = {...}
								local self = arg[1]
								self:Play()
							</event>
						</eventlist>
					</obj>
					<obj id="mirror" class="MirrorObject">
						<attr>
							<width>father.width</width>
							<height>father.height</height>
							<mirrortype>none</mirrortype>
						</attr>
					</obj>
				</children>
			</obj>
		</children>
		<eventlist>
             <event name="OnInitControl">
				local arg = {...}
				local self = arg[1]
				local obj = self:GetControlObject("mirror")
				local attr = self:GetAttribute();
				obj:SetMirrorType(attr.Type)
			 </event>
        </eventlist>
	</objtemplate>
</control>
	
<objtreetemplate id="HelloBolt.Tree" class="ObjectTreeTemplate">
	<attr>
			<left>-200</left>
			<top>-200</top>
			<width>2000</width>
			<height>2000</height>
	</attr>

										
	<obj id="app.bkg" class="FillObject">
		<attr>
			<filltype>Line</filltype>
			<blendtype>Source</blendtype>
			<srcpt>0,0</srcpt>
			<destpt>0,height</destpt>
			<width>0</width>
			<height>0</height>
			<srccolor>230,50,0,240</srccolor>
			<destcolor>50,230,0,150</destcolor>
		</attr>
		<children>
			<obj id="caption" class="CaptionObject">
				<attr>
					<width>father.width</width>
					<height>father.height</height>
					<zorder>-1000</zorder>
				</attr>
			</obj>
			<obj class="MirrorGif">
				<attr>
					<left>50</left>
					<top>50</top>
					<width>240</width>
					<height>170</height>
					<Type>none</Type>
				</attr>
			</obj>
			<obj class="MirrorGif">
				<attr>
					<left>300</left>
					<top>50</top>
					<width>240</width>
					<height>170</height>
					<Type>hor</Type>
				</attr>
			</obj>
			<obj class="MirrorGif">
				<attr>
					<left>50</left>
					<top>230</top>
					<width>240</width>
					<height>170</height>
					<Type>ver</Type>
				</attr>
			</obj>
			<obj class="MirrorGif">
				<attr>
					<left>300</left>
					<top>230</top>
					<width>240</width>
					<height>170</height>
					<Type>both</Type>
				</attr>
			</obj>
		</children>
	</obj>
</objtreetemplate>
	
<hostwndtemplate id="HelloBolt.Wnd" class="FrameHostWnd">
		<attr> 
			<!-- <mainwnd>1</mainwnd> -->
			<title>Bolt</title>
			<layered>1</layered>
			<left>200</left> 
			<top>100</top>
			<width>800</width>
			<height>600</height>
			<topmost>0</topmost>
			<visible>1</visible>
			<enable>1</enable>
			<maxbox>0</maxbox>
			<minbox>0</minbox>
			<minwidth>100</minwidth>
			<minheight>72</minheight>
			<maxwidth>1000</maxwidth>
			<maxheight>720</maxheight>
			<appwindow>1</appwindow>
			<fps>30</fps>
		</attr>
		<eventlist>
			<event name="OnSize" file="MainWnd.xml.lua" func="OnSize"/>
			<event name="OnClose" file="MainWnd.xml.lua" func="OnClose"/>
		</eventlist>
</hostwndtemplate>
</xlue>